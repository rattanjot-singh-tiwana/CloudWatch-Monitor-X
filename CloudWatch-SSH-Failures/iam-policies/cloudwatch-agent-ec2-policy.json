"Version": "2010-09-09",
"Statement": [
    {
        "Effect": "Allow",
        "Action": [
            "cloudwatch:PutMetricData",
            "ec2:DescribeVolumes",
            "ec2:DescribeTags", 
            "logs:PutLogEvents", 
            "logs:PutMetricFilter", 
            "logs:DescribeLogStreams", 
            "logs:DescribeLogGroups", 
            "logs:CreateLogStream", 
            "logs:CreateLogGroup"
        ],
        "Resource": "*"
    },
    {
        "Effect": "Allow",
        "Action": [
            "ssm:GetParameter"
        ],
        "Resource": "arn:aws:ssm:*:*:parameter/AmazonCloudWatch-*"
    }
]